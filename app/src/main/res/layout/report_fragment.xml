<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="reportfragment"
            type="com.ipath.hospitaldevice.ui.patientreport.ReportVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10mdp"
        tools:context=".ui.searchtest.SearchFragment">

        <!-- TODO: Update blank fragment layout -->

        <androidx.cardview.widget.CardView
            android:id="@+id/personalDetailsCard"
            style="@style/centreLocatorCardDesign"
            android:layout_margin="@dimen/_15mdp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:focusableInTouchMode="false"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/lblName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10mdp"
                    android:text="@string/patientname"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10mdp"
                    android:text="@string/patientname"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblName" />

                <TextView
                    android:id="@+id/lblMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10mdp"
                    android:text="@string/mobno"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pName" />

                <TextView
                    android:id="@+id/pMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10mdp"
                    android:textStyle="bold"
                    android:text="@string/patientname"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblMobile" />

                <TextView
                    android:id="@+id/lblEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10mdp"
                    android:text="@string/email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pMobile" />

                <TextView
                    android:id="@+id/pEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10mdp"
                    android:text="@string/patientname"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblEmail" />
                <TextView
                    android:id="@+id/lblDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10mdp"
                    android:text="@string/date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pEmail" />

                <TextView
                    android:id="@+id/pDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10mdp"
                    android:text="@string/patientname"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblDate" />

                <TextView
                    android:id="@+id/lblResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10mdp"
                    android:text="@string/Result"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pDate" />

                <TextView
                    android:id="@+id/pResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/lblResult"
                    app:layout_constraintTop_toBottomOf="@+id/lblResult" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_350mdp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_40mdp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/pResult"
                    tools:layout_editor_absoluteX="20dp">

                    <Button
                        android:id="@+id/btnSendReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:background="@drawable/centre_button"
                        android:backgroundTint="@color/brown"
                        android:enabled="true"
                        android:text="@string/SendReport"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toStartOf="@+id/btnNewTest"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pResult" />

                    <Button
                        android:id="@+id/btnNewTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:background="@drawable/centre_button"
                        android:text="@string/NewTest"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btnSendReport"
                        app:layout_constraintTop_toBottomOf="@+id/pResult" />

                    <Button
                        android:id="@+id/btnReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:background="@drawable/centre_button"
                        android:text="@string/reGenerateReport"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toStartOf="@+id/btnNewTest"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnSendReport" />

                    <Button
                        android:id="@+id/btnExit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginVertical="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:background="@drawable/centre_button"
                        android:text="Exit"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btnSendReport"
                        app:layout_constraintTop_toBottomOf="@+id/btnNewTest" />
                </LinearLayout>


                <!--                android:onClick="@{()->patientVM.navigator.onClicked()}"-->
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>